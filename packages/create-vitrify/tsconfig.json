{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["src"]
}
