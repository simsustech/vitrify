{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "paths": {
      "vitrify": ["./src/index"],
      "vitrify/*": ["./src/*"]
    }
  },
  "include": ["src/node"]
}
